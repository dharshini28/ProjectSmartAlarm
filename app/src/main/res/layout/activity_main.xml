<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:background="@color/black"
        tools:context=".MainActivity" >

        <TimePicker
            android:id="@+id/tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tp"
            android:text="Alarm name"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:hint="Enter name"
            android:layout_below="@+id/tv1"
            />

        <Button
            android:id="@+id/start_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c6"
            android:textColor="@color/black"
            android:background="#808080"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text=" Set Alarm " />

        <Button
            android:id="@+id/stop_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_alarm"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="#808080"
            android:text=" Cancel_Alarm "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et1"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/t"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Ringtone" />

        <CheckBox
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:text="Beautiful morning" />

        <CheckBox
            android:id="@+id/c2"
            android:buttonTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/c1"
            android:text="Like the devil" />

        <CheckBox
            android:id="@+id/c3"
            android:buttonTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/c2"
            android:textColor="@color/white"
            android:text="Loneliness" />

        <CheckBox
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/c3"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:text="Cuckoo" />

        <CheckBox
            android:id="@+id/c5"
            android:buttonTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/c4"
            android:text="Jump start" />

        <CheckBox
            android:id="@+id/c6"
            android:buttonTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/c5"
            android:text="Wakeup" />

    </RelativeLayout>
</ScrollView>